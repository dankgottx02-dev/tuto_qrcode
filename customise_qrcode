# Create qrcode with customized logo

import qrcode
from PIL import Image

# the url is gonna be visited when the qr codeis scan
url = "https://www.youtube.com/watch?v=TfUZZ-AqQBM"

qr = qrcode.QRCode(version=1,
                   error_correction=qrcode.constants.ERROR_CORRECT_L,
                   box_size=10,
                   border=5)
qr.add_data
qr.make(fit=True)

img = qr.make_image(fill_color="black",back_color="white")

# "my_pet.jpg" is the name of theimg file so  you can change  it  to  something like  "logo.png"
logo = Image.open("my_pet.jpg")
logo_size = img.size[0] // 4

logo = logo.resize((logo_size,logo_size), Image.LANCZOS)
img.paste(logo, (img.size[0]//2 - logo_size//2, img.size[1]//2 - logo_size//2))

img.save("qr_cost.png")
img.open("qr_code.png")
